{
  "title": "【 Combination 】",
  "rules": [
    {
      "description": "【 Combination 】Esc ＝ Caps-lock",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "hold_down_milliseconds": 1200,
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    },
    {
      "description": "【 Combination 】Caps-lock ＝ Esc / Hyper + * ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "【 Combination 】Alt + Tab ＝ Go to Last Application",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": [
              "left_option"
            ]
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
