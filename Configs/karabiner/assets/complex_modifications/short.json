{
  "title": "App-Shortcut",
  "rules": [
    {
      "description": "【 App-Shortcut 】Show Desktop",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f4",
            "modifiers": [
              "left_command",
              "left_option",
              "left_shift"
            ]
          },
          "to": {
            "key_code": "escape",
            "modifiers": [
              "osascript -e 'tell application "Finder"'\\n  -e 'set visible of every process whose visible is true and name is not "Finder" to false'\\n  -e 'set the collapsed of windows to true'\\n  -e 'end tell'",
            ]
          }
        }
      ]
    },
    {
      "description": "【 App-Shortcut 】Force Quit",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f4",
            "modifiers": [
              "left_command",
              "left_option",
              "left_shift"
            ]
          },
          "to": {
            "key_code": "escape",
            "modifiers": [
              "left_command",
              "left_shift"
            ]
          }
        }
      ]
    },
    {
      "description": "【 App-Shortcut 】Logout",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f4",
            "modifiers": [
              "left_command",
              "left_option",
              "left_shift"
            ]
          },
          "to": {
            "key_code": "escape",
            "modifiers": [
              "left_command",
              "left_shift"
            ]
          }
        }
      ]
    },
    {
      "description": "【 App-Shortcut 】Caps-Lock => 工作管理員 活動監視器 系統工具",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a"
          },
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
              ]

            }
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "caps_lock"
              ]
            }
          },
          "to":{
            "shell_command": "/System/Library/CoreServices/Menu\\ Extras/User.menu/Contents/Resources"
          }
        }
      ]
    },
    {
      "description": "【 App-Shortcut 】Caps-Lock => 工作管理員 活動監視器 系統工具",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a"
          },
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "command",
                "option"
              ]
            }
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "caps_lock"
              ]
            }
          },
          "to":{
            "shell_command": "open -a Activity\\ Monitor.app"
          }
        }
      ]
    }
  ]
}
