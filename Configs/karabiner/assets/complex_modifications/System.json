{
  "title": "【 System 】",
  "rules": [
    {
      "description": "【 System 】Win + Alt + c ＝ 超注音輸入法",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [
                {
                  "input_mode_id": "tw.superime.inputmethod.zhuyin",
                  "input_source_id": "tw.superime.inputmethod.ChaozhuyinMacOS.zhuyin",
                  "language": "zh-Hant"
                }
              ]
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_mode_id": "tw.superime.inputmethod.zhuyin",
                "input_source_id": "tw.superime.inputmethod.ChaozhuyinMacOS.zhuyin",
                "language": "zh-Hant"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "【 System 】Win + Alt + spacebar ＝ English Input Method",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [
                {
                  "language": "en"
                }
              ]
            }
          ],
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "【 Combination 】Alt + Tab ＝ Go to Last Application",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": [
              "left_option"
            ]
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "【 System 】Win + E ＝ Finder",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a Finder.app"
            }
          ]
        }
      ]
    }
  ]
}
