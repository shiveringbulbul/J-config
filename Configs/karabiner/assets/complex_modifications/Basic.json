{
  "title": "Basic",
  "rules": [
    {
      "description": "【 Basic 】Windows Like Button",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "spacebar"
          },
          "to": {
            "key_code": "right_command"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "delete_forward"
          },
          "to": {
            "key_code": "right_option"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "up_arrow"
          },
          "to": {
            "key_code": "right_shift"
          }
        },
        {
          "from": {
            "key_code": "up_arrow"
          },
          "to": {
            "key_code": "down_arrow"
          }
        }
      ]
    }
  ]
}
