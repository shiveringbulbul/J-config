root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
# insert_final_newline = true       # conflict with Atom
# trim_trailing_whitespace = true   # conflict with Atom

[*.bat]
charset = big5
end_of_line = crlf

[*.html]
indent_size = 2

[*.json]
indent_size = 2

[*.{md,rst}]
# trim_trailing_whitespace = false  # conflict with Atom

[**.min.js]
indent_style = unset
insert_final_newline = false

[*.sh]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
