[MASTER]
jobs=2
ignore=migrations
init-hook="
          import sys
          from pathlib import Path

          project_name = 'odiall'  # <- EDIT THIS LINE

          desktop = Path.home() / 'Desktop'
          target = str(desktop / project_name)
          envs = desktop / 'envs'
          envs = [
              str(sub / 'lib' / 'python3.7' / 'site-packages')
              for sub in envs.iterdir() if sub.is_dir()
          ]
          sys.path = [target] + envs + sys.path
          "
# load-plugins=pylint_django
persistent=yes
rcfile=

[MESSAGES CONTROL]
# enable=
#   F,
#   E,
#   anomalous-backslash-in-string,
#   bad-format-string,
#   bad-open-mode,
#   binary-op-exception,
#   duplicate-key,
#   global-variable-not-assigned,
#   unnecessary-semicolon,
#   unreachable,
#   unused-variable
enable=all
disable=<訊息編號>
'''
  C,
  R,
  broad-except,
  unbalanced-tuple-unpacking,
  W0222,
  W0223,
  W0621
'''

[MISCELLANEOUS]
# notes=FIXME,TODO,XXX

[REPORTS]
include-ids=yes
msg-template={path}:{line} | {msg_id}:{symbol} | {obj} | {msg}

[FORMAT]
max-line-length=200
max-module-lines=500
indent-string='    '

[SIMILARITIES]
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no
min-similarity-lines=4

[TYPECHECK]
# used in django-models
generated-members=REQUEST,_meta,acl_users,aq_parent,id,objects
