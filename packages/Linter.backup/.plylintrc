[MASTER]
jobs=2
ignore=
  migrations
init-hook="
          import sys
          from pathlib import Path

          project_name = 'odiall'  # <- EDIT THIS LINE

          desktop = Path.home() / 'Desktop'
          target = str(desktop / project_name)
          envs = desktop / 'envs'
          envs = [
              str(sub / 'lib' / 'python3.7' / 'site-packages')
              for sub in envs.iterdir() if sub.is_dir()
          ]
          sys.path = [target] + envs + sys.path
          "
load-plugins=pylint_django
persistent=yes
rcfile=

[MESSAGES CONTROL]
enable=all
disable=
  C,
  R,
  I,
  abstract-method,
  broad-except,
  fixme,
  redefined-outer-name,
  unbalanced-tuple-unpacking

[MISCELLANEOUS]
notes=FIXME,TODO

[REPORTS]
include-ids=yes
msg-template={path}:{line} | {msg_id}:{symbol} | {obj} | {msg}

[VARIABLES]
ignored-argument-names=_.*|args|kwargs|sender

[FORMAT]
max-line-length=128
max-module-lines=128
indent-string='    '

[SIMILARITIES]
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no
min-similarity-lines=4

[TYPECHECK]
# used in django-models
generated-members=
  REQUEST,
  [a-zA-Z]+_set,
  _meta,
  acl_users,
  aq_parent,
  id,
  objects
