{
  "title": "【 Addition 】",
  "author": "JackaL(shiveringbulbul@hotmail.com)",
  "homepage": "https://github.com/shiveringbulbul/Jackalization",
  "hostpage": "https://pqrs.org/osx/karabiner/complex_modifications/",
  "manual": "https://github.com/shiveringbulbul/Jackalization/tree/master/configurations/karabiner/assets/complex_modifications/",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/shiveringbulbul/Jackalization/master/configurations/karabiner/assets/complex_modifications/Application.json",
  "rules": [
    {
      "description": "【 Addition-System 】Ctrl + Alt + F12 ＝ Force Quit",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f12",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition-System 】Hyper + F12 ＝ Log Out",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f12",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_option",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "left_command",
                "left_shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition-Win 】Win + Alt + C ＝ 超注音輸入法",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [
                {
                  "input_mode_id": "tw.superime.inputmethod.zhuyin",
                  "input_source_id": "tw.superime.inputmethod.ChaozhuyinMacOS.zhuyin",
                  "language": "zh-Hant"
                }
              ]
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_mode_id": "tw.superime.inputmethod.zhuyin",
                "input_source_id": "tw.superime.inputmethod.ChaozhuyinMacOS.zhuyin",
                "language": "zh-Hant"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition-Win 】Win + Alt + Spacebar ＝ 英文輸入法",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [
                {
                  "language": "en"
                }
              ]
            }
          ],
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition-Win 】Win + E ＝ Finder",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a Finder.app"
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition-Win 】Win + D ＝ Show Desktop",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"Finder\"' -e 'set visible of every process whose visible is true and name is not \"Finder\" to false' -e 'set the collapsed of windows to true' -e 'end tell'"
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition-Win 】Win + Tab ＝ Show Desktop Spaces",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ]
        }
      ]
    }
    {
      "description": "【 Addition 】Spacebar | Win + *",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "spacebar"
          },
          "to": {
            "key_code": "left_control"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "delete_forward"
          },
          "to": {
            "key_code": "right_option"
          }
        },


    {
      "type": "basic",
      "from": {
        "key_code": "right_shift",
        "modifiers": {
          "optional": [
            "any"
          ]
        }
      },
      "to_if_alone": {
        "key_code": "up_arrow"
      },
      "to": {
        "key_code": "right_shift"
      }
    },
    {
      "from": {
        "key_code": "up_arrow"
      },
      "to": {
        "key_code": "down_arrow"
      }
    }
  ]
}
