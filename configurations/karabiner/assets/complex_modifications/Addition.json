{
  "title": "【 Addition 】",
  "author": "JackaL(shiveringbulbul@hotmail.com)",
  "homepage": "https://github.com/shiveringbulbul/Jackalization",
  "hostpage": "https://pqrs.org/osx/karabiner/complex_modifications/",
  "manual": "https://github.com/shiveringbulbul/Jackalization/tree/master/configurations/karabiner/assets/complex_modifications/",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/shiveringbulbul/Jackalization/master/configurations/karabiner/assets/complex_modifications/Addition.json",
  "rules": [
    {
      "description": "【 Typer 】Tab: Tab| Win + Shift",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab"
          },
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ],
          "to": [
            {
              "lazy": true,
              "key_code": "left_shift",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition 】Spacebar: Spacebar|Win",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar"
          },
          "to_if_held_down": [
            {
              "key_code": "left_control",
              "halt": true
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "spacebar"
            }
          ]
        }
      ]
    },
    {
      "description": "【 Addition 】Right-Command: Del|Alt",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "delete_forward"
          },
          "to": {
            "lazy": true,
            "key_code": "right_option"
          }
        }
      ]
    },
    {
      "description": "【 Addition 】Right-Option: F18|Ctrl",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option"
          },
          "to_if_alone": {
            "key_code": "f18"
          },
          "to": {
            "lazy": true,
            "key_code": "right_command"
          }
        }
      ]
    },
    {
      "description": "【 Addition 】Right-Shft: ⬆︎|Shift",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": {
            "key_code": "up_arrow"
          },
          "to": {
            "lazy": true,
            "key_code": "right_shift"
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow"
          },
          "to": {
            "key_code": "down_arrow"
          }
        }
      ]
    },
    {
      "description": "【 Addition 】0: 0|Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "equal_sign"
          },
          "to_if_alone": {
            "key_code": "equal_sign"
          },
          "to_if_held_down": {
            "key_code": "fn"
          }
        }
      ]
    }
  ]
}
